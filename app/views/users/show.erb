                <span class="title">I will judge...</span>
                <label class="yes" for="yes"><input type="radio" name="radio-1" id="yes" checked="checked" />Yes</label>
                <label class="no" for="no"><input type="radio" name="radio-1" id="no" />No</label>
              </div>
              <div class="checkbox-row">
                <p>Select genres you would like to judge</p>
                <div class="checkbox-holder">
                  <label for="country">
                    <input type="checkbox" name="checkbox-1" id="country" checked="checked" />Country</label><label for="electronic">
                    <input type="checkbox" name="checkbox-1" id="electronic" />Electronic</label><label for="hiphop">
                    <input type="checkbox" name="checkbox-1" id="hiphop" checked="checked" />Hip Hop</label><label for="pop">
                    <input type="checkbox" name="checkbox-1" id="pop" />Pop</label><label for="rnb">
                    <input type="checkbox" name="checkbox-1" id="rnb" />R&amp;B</label><label for="rock">
                    <input type="checkbox" name="checkbox-1" id="rock" />Rock</label>
                </div>
              </div>
              <div class="submit-row">
                <div class="submit-holder">
                  <input type="submit" value="Save" class="button-save" />
                </div>
              </div>
            </fieldset>
          </form>
        </div>
      </div>
    </div>
    <div class="tab-content" id="tab-4">
      <div class="tab-holder">
        <div class="tab-frame">
          <div class="title-row title-row-2">
            <h3>Contestant</h3>
            <div class="btn-holder"><a href="#" class="btn-save button">Save</a></div>
          </div>
