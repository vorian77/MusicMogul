.account
  %a{:href => "#"}
    %img{:alt => "", :src => "#{current_user.photo.thumb.url}"}>/
    #{current_user.username}
    %span.dd-toggle
  .acc-dd.clearfix
    %span.dd-arr
    = image_tag current_user.photo.medium.url, class: "user-image"
    %ul
      %li
        %a{:href => "#{edit_user_path(current_user)}"} My Profile
      %li
        %a{:href => "#{friends_path}"} My Friends
      - if current_user.admin?
        %li
          %a{:href => "#{admin_root_path}"} Administration
      %li
        %a{:href => "#{destroy_user_session_path}", "data-method" => "delete"} Sign Out
