.account
  %a{:href => "#"}
    %img{:alt => "", :src => "#{current_user.photo.url(:thumb)}"}>/
    #{current_user.display_name}
    %span.dd-toggle
  .acc-dd.clearfix
    %span.dd-arr
    = image_tag current_user.photo.url(:medium), class: "user-image"
    %ul
      %li
        %a{:href => "#{edit_user_path(current_user)}"} My Personal Profile
      - if current_user.entries.count > 0
        %li
          %a{:href => "#{edit_entry_path(current_user.entries.first)}"} My Contestant Profile
        - if contest_running?
          %li
            %a{:href => "#{entry_path(current_user.entries.first)}"} My Audition
      - if contest_running?
        %li
          %a{:href => "#{evaluations_path}"} My Evaluations
      %li
        %a{:href => "#{friends_path}"} My Friends
      - if current_user.admin?
        %li
          %a{:href => "#{admin_root_path}"} Administration
      %li
        %a{:href => "#{destroy_user_session_path}", "data-method" => "delete"} Sign Out
