.account
  %a{:href => "#"}
    %img{:alt => "", :src => "#{current_user.profile_photo.url(:thumb)}"}>/
    #{current_user.display_name}
    %span.dd-toggle
  .acc-dd.clearfix
    %span.dd-arr
    = image_tag current_user.profile_photo.url(:medium), class: "user-image"
    %ul
      %li
        %a{:href => "#{edit_user_path(current_user)}"} My Account
      - if current_user.entries.count > 0
        %li
          %a{:href => "#{edit_entry_path(current_user.entries.first)}"} My Video Submission
        - unless contest_pending?
          %li
            %a{:href => "#{entry_path(current_user.entries.first)}"} My Audition
      - unless contest_pending?
        %li
          %a{:href => "#{evaluations_path}"} My Evaluations
      %li
        %a{:href => "#{friends_path}"} My Friends
      - if current_user.admin?
        %li
          %a{:href => "#{admin_root_path}"} Administration
      %li
        %a{:href => "#{destroy_user_session_path}", "data-method" => "delete"} Sign Out
