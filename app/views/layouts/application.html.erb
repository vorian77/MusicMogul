<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>FansHelpingArtists</title>
  	<%= stylesheet_link_tag    "application", :media => "all" %>
  	<%= javascript_include_tag "application" %>
  	<%= csrf_meta_tags %>	
</head>
<body>
	<div id="wrapper">
		<div class="w1">
			<div id="header">
				<div class="header-holder">
					<h1 class="logo"><a href="#">FansHelpingArtists</a></h1>
					<span class="slogan">A world class music talent contest<span>judged by fans!</span></span>
				</div>
				<div class="panel">
					<div class="block">
						<div class="block-holder">
							<ul class="social-networks addthis_toolbox" addthis:url="http://fanhelp.us" addthis:title="Fans Helping Artists" addthis:description="description stuff" >
								<script type="text/javascript">var addthis_config = { data_track_clickback: false }</script>
								<!-- AddThis Button BEGIN -->
								<li><a class="addthis_button_preferred_1"></a></li>
								<li><a class="addthis_button_preferred_2"></a></li>
								<li><a class="addthis_button_preferred_4"></a></li>
								<li><a class="addthis_button_google_plusone" g:plusone:count="false" g:plusone:size="small"></a></li>
								<li><a class="addthis_button_preferred_3"></a></li>
								<li><a class="addthis_button_compact"></a></li>
								<script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4f8a11bd2fe94136"></script>
								<!-- AddThis Button END -->
								<!--
								<li><a href="#">facebook</a></li>
								<li><a href="#" class="twitter">twitter</a></li>
								<li><a href="#" class="email">email</a></li>
								<li><a href="#" class="shareyhis">ShareThis</a></li>
								-->
							</ul>
							<div class="box">
								<%- if user_signed_in? %>
									<div class="account-box">
										<a href="#" class="user"> <img src="images/ico-01.gif" width="15" height="15" alt="image description" /><span><%= current_user.email %></span></a>
										<div class="drop">
											<div class="holder">
												<div class="frame">
													<div class="foto">
														<img src="images/ico-02.gif" width="77" height="77" alt="image description" />
														<span><%= current_user.email %></span>
													</div>
													<ul class="list">
														<li><a href="#">My Account</a></li>
														<li><a href="<%= destroy_user_session_path %>" data-method="delete">Logout</a></li>
													</ul>
												</div>
											</div>
										</div>
									</div>
								<%- else %>
									<ul class="log-in-nav">
										<li><a href="<%= new_user_session_path %>">Log in</a></li>
										<li><a href="<%= new_user_registration_path %>">Sign up</a></li>
									</ul>
								<%- end %>
							</div>
						</div>
					</div>
					<ul id="nav">
						<li class="active"><a href="#">Home <span class="arrow">arrow</span></a></li><li>
						<a href="#">Preview Contestants <span class="arrow">arrow</span></a></li>
					</ul>
				</div>
			</div>
			<div id="main">
				<%= yield %>	
			</div>
		</div>
	</div>
	<div id="footer">
		<div class="panel">
			<div class="holder">
				<div class="frame">
						<span>Presented by:</span>
						<a href="#"><img src="images/img-03.png" width="100" height="48" alt="Mr. Handyman On time Done rieht" /></a>
				</div>
			</div>
		</div>
		<div class="bar">
			<div class="add-nav-box">
				<ul class="add-nav">
					<li><a href="#">About </a></li>
					<li><a href="#">Contact </a></li>
					<li><a href="#">Terms</a></li>
					<li><a href="#">Privacy</a></li>
				</ul>
			</div>
			<p>&copy; 2012 Bright Lights Music Group, LLC  All Rights Reserved</p>
		</div>
	</div>
</body>
</html>