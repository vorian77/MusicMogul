<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
	<%= render 'layouts/head' %>
</head>
<div id="fb-root"></div>
<script>(function(d, s, id) {
  var js, fjs = d.getElementsByTagName(s)[0];
  if (d.getElementById(id)) return;
  js = d.createElement(s); js.id = id;
  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
  fjs.parentNode.insertBefore(js, fjs);
}(document, 'script', 'facebook-jssdk'));</script>
<body>
	<div class="flash">
		<%- if notice %>
			<div class="notice">
				<%= notice %>
				<a class="close">x</a>
			</div>
		<%- end %>
		<%- if alert %>
			<div class="alert">
			<%= alert %>
				<a class="close">[X]</a>
			</div>
		<%- end %>
	</div>
	<div id="wrapper">
    <div class="w1">
			<div id="header">
				<div class="header-holder">
          <h1 class="logo"><%= link_to 'Fans Helping Artists', root_path %></h1>
					<span class="slogan">A world class music talent contest<span>judged by fans!</span></span>
				</div>
				<div class="panel">
					<div class="block">
						<div class="block-holder">
              <ul class="social-networks">
                <li><a href="#">facebook</a></li>
                <li><a href="#" class="twitter">twitter</a></li>
                <li><a href="#" class="googleplus">google plus</a></li>
								<li><a href="#" class="email">email</a></li>
								<li><a href="#" class="shareyhis">ShareThis</a></li>
                <!--
                <script type="text/javascript">var addthis_config = { data_track_clickback: false }</script>
                <li><a class="addthis_button_preferred_1"></a></li>
								<li><a class="addthis_button_preferred_2"></a></li>
								<li><a class="addthis_button_preferred_4"></a></li>
								<li><a class="addthis_button_google_plusone" g:plusone:count="false" g:plusone:size="small"></a></li>
								<li><a class="addthis_button_preferred_3"></a></li>
								<li><a class="addthis_button_compact"></a></li>
                <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4f8a11bd2fe94136"></script>
                -->
							</ul>
							<div class="box">
                <% if user_signed_in? %>
                  <div class="account-box">
                    <a href="<%= account_path %>" class="user">
                      <% if current_user.profile_photo_square? %>
                        <%= image_tag current_user.profile_photo_square.cropped.tiny, :alt => 'Profile photo' %>
                      <% end %>
                      <span><div class="display-name"><%= current_user.display_name %></div></span>
                    </a>
                    <div class="drop">
                      <div class="holder">
                        <div class="frame">
                          <div class="foto">
                            <div class="profile-photo"><% if current_user.profile_photo_square? %>
                              <%= image_tag current_user.profile_photo_square.cropped.small, :width => '77', :height => '77' %>
                            <% end %></div>
                            <span><%= current_user.display_name %></span>
                          </div>
                          <ul class="list">
                            <li><a href="<%= account_path %>">My Account</a></li>
                            <li><a href="<%= destroy_user_session_path %>" data-method="delete">Logout</a></li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                <% else %>
								  <ul class="log-in-nav">
									  <li><a class="lightbox" href="#popup-2"><span>Log in</span></a></li>
									  <li><a class="lightbox" href="#popup"><span>Sign up</span></a></li>
                  </ul><D-d>
                <% end %>
							</div>
						</div>
					</div>
					<ul id="nav">
            <li class="<%= 'active' if current_page?(root_path) %>"><a href="<%= root_path %>">Home <span class="arrow">arrow</span></a></li>
            <li class="<%= 'active' if current_page?(page_path('preview_contestants')) %>"><a href="<%= page_path('preview_contestants'); %>">Preview Contestants <span class="arrow">arrow</span></a></li>
					</ul>
				</div>
			</div>
			<div id="main">
				<%= yield %>	
			</div>
		</div>
  </div>
  <%= render 'layouts/popups' %>
	<div id="footer">
		<div class="panel">
			<div class="holder">
				<div class="frame">
						<span>Presented by:</span>
            <a href="<%= page_path('sponsors') %>"><img src="/assets/img-03.png" width="100" height="48" alt="Mr. Handyman: On time. Done right." /></a>
				</div>
			</div>
		</div>
		<div class="bar">
			<div class="add-nav-box">
				<ul class="add-nav">
          <li><a href="<%= page_path('notices', :anchor => 'tab-5') %>">About </a></li>
          <li><a href="<%= page_path('notices', :anchor => 'tab-6') %>">Contact </a></li>
          <li><a href="<%= page_path('notices', :anchor => 'tab-7') %>">Terms</a></li>
          <li><a href="<%= page_path('notices', :anchor => 'tab-8') %>">Privacy</a></li>
				</ul>
			</div>
      <div class="social-media-buttons">
        <%= link_to 'http://www.facebook.com/FansHelpingArtists' do %>
          <div class="facebook-button">Join us on facebook</div>
        <% end %>
        <%= link_to 'https://twitter.com/intent/user?screen_name=fanhelp' do %>
          <div class="twitter-button">Follow @FanHelp</div>
        <% end %>
      </div>
    </div>
    <div class="copyright">&copy; 2012 Bright Lights Music Group, LLC  All Rights Reserved</div>
	</div>
</body>
</html>
