!!!
%html{:dir => "ltr", :lang => "en-US", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title MusicMogul
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-type"}/
    %link{:href => "css/images/favicon.ico", :rel => "shortcut icon"}/
    = stylesheet_link_tag "application", :media => "all", :rel => "stylesheet", :type => "text/css"
    = javascript_include_tag "application"
    / <script src="js/jquery.mousewheel.js" type="text/javascript"></script>
  %body
    = render "layouts/flash"
    .shell
      / Header
      #header
        %h1#logo
          %a{:href => root_path} Music Mogul
        - if user_signed_in?
          #navigation.left
            %ul
              %li
                %a.audition{href: "#{root_path}", class: "#{'audition-active' if current_page?(root_path)}"}
                  Audition
              %li
                %a.follow{href: "#{follows_path}", class: "#{'follow-active' if current_page?(follows_path)}"}
                  Following
              %li
                %a.board{href: "#{leaderboard_path}", class: "#{'board-active' if current_page?(leaderboard_path)}"}
                  Leader Board
              %li
                %a.my-evaluation{href: "#{evaluations_path}", class: "#{'my-evaluation-active' if current_page?(evaluations_path)}"}
                  My Evaluations
          / END Navigaiton
          .profile.right
            .drop-holder
              %a.name{href: "#"}
                %span #{current_user.display_name}
              .cl  
              .drop-down
                %span.arrow-drop  
                .left-part.left
                  .img-box
                    %img{alt: "", height: "138", src: "#{current_user.profile_photo.url(:medium)}", width: "138"}/
                  %a{href: "#{account_path}"} #{current_user.display_name}
                .right-part.right
                  %ul
                    %li
                      %a{:href => "#"} My Player Profile
                    %li
                      %a{:href => "#"} Submit A Video
                    %li
                      %a{:href => "#"} My Contestant
                    %li
                      %a{:href => "#"} My Audition
                    %li
                      %a{:href => "#"} Administration
                    %li.last
                      %a{:href => "#{destroy_user_session_path}", "data-method" => "delete"} Sign out
              .cl  
            %a.complete{:href => "#{account_path}"} Complete your profile
            .cl
        - else
          .btn-holder.right
            %a{:href => new_user_session_path} Sign In
            %a{:href => new_user_registration_path} Sign Up
        .cl  
        = content_for(:bottom_of_header)
      / END Header
      / Content
      #content
        = yield
        .cl  
        %br/
        %br/
        %br/
        %br/
        %br/
      / END Content
      / Footer
      #footer
        .top-part
          %ul
            %li
              %a{:href => "#"} Game Rules
            %li
              %a{:href => "#"} About Us
            %li
              %a{:href => "#"} Contact Us
          %a.right-link{:href => "#"} Musicians
          .cl  
        .bottom-part
          %ul.left
            %li
              %a{:href => "#"} Terms
            %li
              %a{:href => "#"} Privacy
          %ul.right
            %li
              %a{:href => "#"} Share
            %li
              %a{:href => "#"} Follow
          %span.copy 2012 Bright Lights Music Group, LLC
      / END Footer

    = javascript_include_tag "http://www.google.com/jsapi"
    :javascript
      google.load("swfobject", "2.1");
