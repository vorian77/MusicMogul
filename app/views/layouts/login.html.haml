%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title Music Mogul
    /[if IE 6] <script  type="text/javascript" src="common/js/jq-png-min.js"></script>
    = stylesheet_link_tag "common/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"
    %link{:href => "http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic,400italic,600,600italic,700,700italic,800,800italic", :rel => "stylesheet", :type => "text/css"}/
    = javascript_include_tag "application"
  %body
    #outer_header
      #header
        .wrapper
          #header_details
            %span.logo
              %span.logo
                %a{:href => "#{root_path}"}
                  = image_tag("common/logo.png")
            %span.logo_right
              tomorrow’s music stars
              %br/
              discovered by fans
            .header_right
              %span.sign_btn
                %a{:href => "#{new_user_session_path}"} Sign In
    .wrapper
      = yield
      #footer
        .footer_top
          .footer_left_top
            %ul
              %li.first
                %a{:href => "#{notices_path(anchor: "about")}"} About Us
              %li
                %a{:href => "#"} Contest Rules
              %li
                %a{:href => "#{notices_path(anchor: "contact")}"} Contact Us
              %li
                %a{:href => "http://suggestions.musicmogul.com"} Suggestions
              %li.first
                %a{:href => "#{notices_path(anchor: "privacy")}"} Privacy
              %li
                %a{:href => "#{notices_path(anchor: "terms")}"} Terms
          .footer_right
            %ul
              %li.twitter
                %a{:href => "http://www.twitter.com/MyMusicMogul"}
              %li.facebook
                %a{:href => "http://www.facebook.com/MyMusicMogul"}
        .footer_bottom © 2013 Bright Lights Music Group, LLC