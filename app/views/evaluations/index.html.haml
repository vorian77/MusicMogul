= content_for(:bottom_of_header) do
  = render "evaluations/progress"

- @evaluations.each do |evaluation|
  - entry = evaluation.entry
  .box
    .img-holder
      %a{:href => "#{entry_path(entry)}"}
        %img{:alt => "", :height => "186", :src => "#{entry.profile_photo.url(:medium)}", :width => "186"}/
    .text-holder.left
      = link_to entry.community_name, entry, class: "title"
      = render "follows/button", entry: entry
      .cl  
      .left-part
        %span.left-text Genre
        %span.right-text #{entry.genre || "Unspecified"}
        .cl  
        %span.left-text Hometown
        %span.right-text #{entry.hometown  || "Unspecified"}
        %span.left-text Place/Points
        %span.right-text #{entry.rank}/#{entry.points}
        .cl  
        %span.left-text Evaluations
        %span.right-text #{entry.evaluations.count}
        .cl  
        %span.left-text Avg. Eval.
        %span.right-text #{number_with_precision entry.overall_score, precision: 1}
        .cl  
        %span.left-text Followers
        %span.right-text #{entry.follows.count}
        .cl  
      .right-part
        %ul
          %li
            %span.red #{evaluation.created_at.strftime("%m/%d/%y")}
          %li
            %span.red #{evaluation.created_at.strftime("%H:%M")}
          - if entry.has_music?
            %li
              %span
                Music
                %span.red #{evaluation.music_score}
          - if entry.has_vocals?
            %li
              %span
                Vocal
                %span.red #{evaluation.vocals_score}
          %li
            %span
              Presentation
              %span.red #{evaluation.presentation_score}
        .cl  
        .ellipsis
          = evaluation.comment
    .cl
